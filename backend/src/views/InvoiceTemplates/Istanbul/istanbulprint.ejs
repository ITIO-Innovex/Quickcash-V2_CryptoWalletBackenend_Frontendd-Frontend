<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice <%= inv %></title>
  <style>
    @media print {
     body {
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }
    }
    html { -webkit-print-color-adjust: exact; }
  </style>
</head>
<body style="padding: 5%">
  <table width="100%">
    <tr>
      <td style="font-weight: 900;font-size: 41px; background: black;color:white;padding: 37px;">INVOICE</td>
    </tr>
    <tr>
      <td align="left"><img src="<%= logoInvoice %>" width="100px" height="70px"/></td>
    </tr>
  </table>
  <table width="100%" style="margin-top: 30px;">
    <tr>
      <td><% if(invoiceData && invoiceData[0] && invoiceData[0].company_name) { %> <%= invoiceData[0].company_name %> <% } %></td>
    </tr>
    <tr>
      <td><span style="font-weight: 900">Address:</span><span><% if(invoiceData && invoiceData[0] && invoiceData[0].address) { %> <%= invoiceData[0].address %> <% } %></span></td>
    </tr>
    <tr>
      <td><span style="font-weight: 900;">Phone:</span><span><% if(invoiceData && invoiceData[0] && invoiceData[0].mobile) { %> <%= invoiceData[0].mobile %> <% } %></span></td>
    </tr>
  </table>
  <table width="100%" style="margin-top: 30px;">
    <tr>
      <td style="font-weight: 900;">To</td>
    </tr>
    <tr>
      <td><span style="font-weight: 900">Name:</span><span><% if(name) { %><%= name %><% } %></span></td>
    </tr>
    <tr>
      <td><span style="font-weight: 900;">Email:</span><span><% if(email) { %><%= email %><% } %></span></td>
      <td style="font-weight: 900;" align="right"><% if(qrCode) { %> Payment QR Code <% } %></td>
    </tr>
    <tr>
      <td><span style="font-weight: 900;">Address:</span><span><% if(address) { %><%= address %><% } %></span></td>
      <td align="right" rowspan="4"><% if(qrCode) { %> <img src="<%= qrCode %>" width="140px" height="120px"/> <% } %></td>
    </tr>
    <tr>
      <td>
        <span style="font-weight: 900;">Invoice ID:</span>
        <span>#<% if(inv) { %><%= inv %><% } %></span>
      </td>
    </tr>
    <tr>
      <td>
        <span style="font-weight: 900;">Invoice Date:</span>
        <span><% if(item && item.invoice_date) { %><%= item.invoice_date %><% } %></span>
      </td>
    </tr>
    <tr>
      <td>
        <span style="font-weight: 900;">Due Date:</span>
        <span><% if(item && item.due_date) { %><%= item.due_date %><% } %></span>
      </td>
    </tr>
  </table>

  <table width="100%" border="1" style="border-collapse: collapse; margin-top: 20px;">
    <thead>
      <tr>
        <td align="center" style="padding: 12px;">#</td>
        <td align="center" style="padding: 12px;">PRODUCT</td>
        <td align="center" style="padding: 12px;">QTY</td>
        <td align="center" style="padding: 12px;">UNIT PRICE</td>
        <td align="center" style="padding: 12px;">AMOUNT</td>
      </tr>
    </thead>
      <tbody>
        <% if(item && item.productsInfo && Array.isArray(item.productsInfo) && item.productsInfo.length > 0) { %>
          <% item.productsInfo.forEach(function(product, index) { %>
            <tr>
              <td style="padding: 12px;border:1px solid black;" align="center"><%= index+1 %></td>
              <td style="padding: 12px;border:1px solid black;" align="center"><% if(product && product.productName) { %><%= product.productName %><% } %></td>
              <td style="padding: 12px;border:1px solid black;" align="center"><% if(product && product.qty) { %><%= product.qty %><% } %></td>
              <td style="padding: 12px;border:1px solid black;" align="center"><% if(item && item.currency_text) { %><%= item.currency_text %><% } %><% if(product && product.price) { %><%= product.price %><% } %></td>
              <td style="padding: 12px;border:1px solid black;" align="center"><% if(item && item.currency_text) { %><%= item.currency_text %><% } %><% if(product && product.amount) { %><%= product.amount %><% } %></td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
  </table>

  <table width="100%" style="margin-top: 30px;">
    <tr>
      <td colspan="4" rowspan="6">
        <span style="font-weight: 900;"><% if(item && item.tax && Array.isArray(item.tax) && item.tax.length > 0) { %> Tax Information (In %): <% } %></span><br />
        <% if(item && item.tax && Array.isArray(item.tax) && item.tax.length > 0) { %>
          <% item.tax.forEach(function(tx, index) { %>
            <span><% if(tx) { %><%= tx %><% } %> </span> <br />
          <% }); %>
        <% } %>
      </td>
      <td align="right" colspan="5" style="font-weight: 900;">AMOUNT:</td>
      <td align="right" style="max-width: 100px;"><% if(item && item.currency_text) { %><%= item.currency_text %><% } %><% if(item && item.subTotal !== undefined) { %><%= item.subTotal %><% } else { %>0<% } %></td>
    </tr>
    <tr>
      <td align="right" style="font-weight: 900;" colspan="5">DISCOUNT:</td>
      <td align="right" style="max-width: 100px;"><% if(item && item.currency_text) { %><%= item.currency_text %><% } %><% if(item && item.sub_discount !== undefined) { %><%= item.sub_discount %><% } else { %>0<% } %></td>
    </tr>
    <tr>
      <td align="right" style="font-weight: 900;" colspan="5">TAX:</td>
      <td align="right" style="max-width: 100px;"><% if(item && item.currency_text) { %><%= item.currency_text %><% } %><% if(item && item.sub_tax !== undefined) { %><%= item.sub_tax %><% } else { %>0<% } %></td>
    </tr>
    <tr>
      <td align="right" style="font-weight: 900;" colspan="5">TOTAL:</td>
      <td align="right" style="max-width: 100px;"><% if(item && item.currency_text) { %><%= item.currency_text %><% } %><% if(item && item.total !== undefined) { %><%= item.total %><% } else { %>0<% } %></td>
    </tr>
    <tr>
      <td align="right" style="font-weight: 900;" colspan="5">TOTAL DUE:</td>
      <td align="right" style="font-weight: 700;"><% if(item && item.currency_text) { %><%= item.currency_text %><% } %><% if(item && item.dueAmount !== undefined) { %><%= item.dueAmount %><% } else { %>0<% } %></td>
    </tr>
    <tr>
      <td align="right" style="font-weight: 900;" colspan="5">TOTAL PAID:</td>
      <td align="right" style="font-weight: 700;"><% if(item && item.currency_text) { %><%= item.currency_text %><% } %><% if(item && item.paidAmount !== undefined) { %><%= item.paidAmount %><% } else { %>0<% } %></td>
    </tr>
  </table>

  <div style="margin-top:2%;font-weight: 700;">Notes:</div>
   <div style="margin-top:1%;">
    <% if(item && item.note) { %>
     <h1><%- item.note %></h1>
    <% } else { %>  
     <h5>N/A</h5>
    <% } %>
   </div>

   <div style="margin-top:2%; font-weight: 700;">Terms:</div>
   <div style="margin-top:1%;">
    <% if(item && item.terms) { %>
     <h1><%- item.terms %></h1>
    <% } else { %>  
     <h5>N/A</h5>
    <% } %>
   </div>

  <div style="font-weight: 900;margin-top: 30px;">Regards:</div>
  <div><% if(invoiceData && invoiceData[0] && invoiceData[0].regardstext) { %> <%= invoiceData[0].regardstext %> <% } %></div>
  
</body>
</html>